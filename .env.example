# Application Configuration
APP_NAME=KlyntosGuard
APP_ENV=development
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DOMAIN=guard.klyntos.com

# Security
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
CORS_ORIGINS=http://localhost:3000,https://guard.klyntos.com

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/klyntos_guard
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Cache
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# LLM Providers
# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_ORG_ID=org-...
OPENAI_DEFAULT_MODEL=gpt-4

# Anthropic
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_DEFAULT_MODEL=claude-3-opus-20240229

# Google
GOOGLE_API_KEY=...
GOOGLE_DEFAULT_MODEL=gemini-pro

# Azure OpenAI
AZURE_OPENAI_API_KEY=...
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# Monitoring & Logging
LOG_LEVEL=INFO
SENTRY_DSN=
PROMETHEUS_ENABLED=true

# Feature Flags
ENABLE_WEBSOCKETS=true
ENABLE_METRICS=true
ENABLE_AUDIT_LOGGING=true
ENABLE_MULTI_TENANCY=true

# Content Safety
TOXICITY_THRESHOLD=0.8
PII_DETECTION_ENABLED=true
FACT_CHECKING_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Plugin Configuration
PLUGIN_DIRECTORY=./plugins
ENABLE_CUSTOM_PLUGINS=true
